{
  "unstable": ["kv", "ffi", "cron"],
  "tasks": {
    "stop": "pm2 stop donetick",
    "start": "pm2 start --interpreter='deno' --interpreter-args='run -A' --name donetick index.ts && pm2 logs donetick",
    "delete": "pm2 delete donetick",
    "logs": "pm2 logs donetick",
    "reload": "pm2 reload donetick && pm2 logs donetick",
    "check": "deno check --allow-import index.ts",
    "run": "deno run -A index.ts",
    "watch": "deno run --watch -A index.ts",
    "run:molt": "deno run --allow-env --allow-read --allow-write --allow-run --allow-net jsr:@molt/cli",
    "update_deps": "deno task -q run:molt ./**/*.ts --write --no-lock && deno task check"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.6",
    "@retraigo/bettermap": "jsr:@retraigo/bettermap@^1.3.2",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.2",
    "@grammyjs/parse-mode": "npm:@grammyjs/parse-mode@^2.2.0",
    "@std/path": "jsr:@std/path@^1.0.8",
    "grammy/": "https://deno.land/x/grammy@v1.37.0/",
    "moment": "npm:moment@^2.30.1",
    "moment-timezone": "npm:moment-timezone@^0.5.46"
  }
}
